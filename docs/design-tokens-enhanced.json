{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "color": {
    "primary": {
      "50": {
        "$type": "color",
        "$value": "#EEF2FF",
        "$description": "LLM analysis card backgrounds"
      },
      "100": {
        "$type": "color",
        "$value": "#E0E7FF",
        "$description": "Hover states on analysis items"
      },
      "500": {
        "$type": "color",
        "$value": "#6366F1",
        "$description": "Primary CTAs, Analyze with AI buttons (4.56:1 WCAG AA)"
      },
      "600": {
        "$type": "color",
        "$value": "#4F46E5",
        "$description": "Button hover states (5.89:1)"
      },
      "900": {
        "$type": "color",
        "$value": "#312E81",
        "$description": "Active/pressed states (10.2:1 WCAG AAA)"
      }
    },
    "neutral": {
      "50": {
        "$type": "color",
        "$value": "#FAFAFA",
        "$description": "Page background"
      },
      "100": {
        "$type": "color",
        "$value": "#F5F5F5",
        "$description": "Card backgrounds, surface elevation"
      },
      "200": {
        "$type": "color",
        "$value": "#E5E5E5",
        "$description": "Borders, dividers"
      },
      "500": {
        "$type": "color",
        "$value": "#A3A3A3",
        "$description": "Disabled states, placeholders"
      },
      "700": {
        "$type": "color",
        "$value": "#404040",
        "$description": "Secondary text, metadata (8.6:1 WCAG AAA)"
      },
      "900": {
        "$type": "color",
        "$value": "#171717",
        "$description": "Primary text, headings (16.5:1 WCAG AAA)"
      }
    },
    "success": {
      "500": {
        "$type": "color",
        "$value": "#10B981",
        "$description": "API key validated, analysis saved (3.9:1 icons only)"
      },
      "700": {
        "$type": "color",
        "$value": "#047857",
        "$description": "Success text (5.2:1 WCAG AA)"
      }
    },
    "warning": {
      "500": {
        "$type": "color",
        "$value": "#F59E0B",
        "$description": "Rate limit warnings, cost alerts (2.9:1 icons only)"
      },
      "700": {
        "$type": "color",
        "$value": "#B45309",
        "$description": "Warning text (5.5:1 WCAG AA)"
      }
    },
    "error": {
      "500": {
        "$type": "color",
        "$value": "#EF4444",
        "$description": "API errors, validation failures (4.1:1 WCAG AA)"
      },
      "700": {
        "$type": "color",
        "$value": "#B91C1C",
        "$description": "Error text (6.8:1 WCAG AAA)"
      }
    },
    "privacy": {
      "bg": {
        "$type": "color",
        "$value": "#F0FDF4",
        "$description": "Privacy-safe zones (light green tint)"
      },
      "border": {
        "$type": "color",
        "$value": "#86EFAC",
        "$description": "Encrypted data indicators"
      },
      "text": {
        "$type": "color",
        "$value": "#166534",
        "$description": "Stored locally labels"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "primary": {
        "$type": "fontFamily",
        "$value": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": "'SF Mono', 'Monaco', 'Inconsolata', monospace",
        "$description": "API keys, code snippets, technical metadata"
      }
    },
    "fontSize": {
      "hero": {
        "$type": "dimension",
        "$value": "64px",
        "$description": "Page title (rare)"
      },
      "title": {
        "$type": "dimension",
        "$value": "48px",
        "$description": "Modal headers"
      },
      "subtitle": {
        "$type": "dimension",
        "$value": "32px",
        "$description": "Section headers"
      },
      "large": {
        "$type": "dimension",
        "$value": "20px",
        "$description": "Analysis intro text"
      },
      "body": {
        "$type": "dimension",
        "$value": "16px",
        "$description": "Repository descriptions, UI text"
      },
      "small": {
        "$type": "dimension",
        "$value": "14px",
        "$description": "Metadata, helper text"
      },
      "caption": {
        "$type": "dimension",
        "$value": "12px",
        "$description": "Timestamps, privacy labels"
      }
    },
    "fontWeight": {
      "regular": {
        "$type": "fontWeight",
        "$value": "400"
      },
      "medium": {
        "$type": "fontWeight",
        "$value": "500"
      },
      "semibold": {
        "$type": "fontWeight",
        "$value": "600"
      },
      "bold": {
        "$type": "fontWeight",
        "$value": "700"
      }
    },
    "lineHeight": {
      "tight": {
        "$type": "number",
        "$value": "1.1",
        "$description": "Hero headlines"
      },
      "snug": {
        "$type": "number",
        "$value": "1.2",
        "$description": "Titles"
      },
      "normal": {
        "$type": "number",
        "$value": "1.3",
        "$description": "Subtitles"
      },
      "relaxed": {
        "$type": "number",
        "$value": "1.5",
        "$description": "Body text, UI text"
      },
      "loose": {
        "$type": "number",
        "$value": "1.6",
        "$description": "Long-form content, analysis text"
      }
    },
    "letterSpacing": {
      "tight": {
        "$type": "dimension",
        "$value": "-0.02em",
        "$description": "Hero text"
      },
      "normal": {
        "$type": "dimension",
        "$value": "0em"
      },
      "wide": {
        "$type": "dimension",
        "$value": "0.01em",
        "$description": "Captions, uppercase labels"
      }
    }
  },
  "spacing": {
    "1": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "Icon + text inline spacing"
    },
    "2": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "Standard element gaps"
    },
    "3": {
      "$type": "dimension",
      "$value": "24px",
      "$description": "Related group spacing, card gaps"
    },
    "4": {
      "$type": "dimension",
      "$value": "32px",
      "$description": "Card padding (minimum)"
    },
    "6": {
      "$type": "dimension",
      "$value": "48px",
      "$description": "Section internal spacing"
    },
    "8": {
      "$type": "dimension",
      "$value": "64px",
      "$description": "Section boundaries"
    },
    "12": {
      "$type": "dimension",
      "$value": "96px",
      "$description": "Dashboard top spacing"
    },
    "16": {
      "$type": "dimension",
      "$value": "128px",
      "$description": "Hero sections (if used)"
    }
  },
  "borderRadius": {
    "sm": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "Badges, pills"
    },
    "md": {
      "$type": "dimension",
      "$value": "12px",
      "$description": "Buttons, inputs"
    },
    "lg": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "Cards, modals"
    },
    "xl": {
      "$type": "dimension",
      "$value": "24px",
      "$description": "Large containers, analytics dashboard"
    },
    "full": {
      "$type": "dimension",
      "$value": "9999px",
      "$description": "Avatars, circular buttons"
    }
  },
  "boxShadow": {
    "card": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "3px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "$description": "Repository cards at rest (layered with second shadow)"
    },
    "cardHover": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "10px",
        "blur": "15px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "$description": "Card hover state (layered with second shadow)"
    },
    "modal": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "20px",
        "blur": "25px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.15)"
      },
      "$description": "Modals, drawers (layered with second shadow)"
    },
    "privacy": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "0px",
        "blur": "0px",
        "spread": "3px",
        "color": "rgba(134, 239, 172, 0.3)"
      },
      "$description": "Privacy-zone green glow"
    }
  },
  "animation": {
    "duration": {
      "fast": {
        "$type": "duration",
        "$value": "200ms",
        "$description": "Button hover, simple interactions"
      },
      "base": {
        "$type": "duration",
        "$value": "250ms",
        "$description": "Card hover, state changes"
      },
      "slow": {
        "$type": "duration",
        "$value": "300ms",
        "$description": "Modals, drawers, LLM streaming"
      },
      "aiStream": {
        "$type": "duration",
        "$value": "50ms",
        "$description": "Text streaming animation per token"
      },
      "shimmer": {
        "$type": "duration",
        "$value": "1500ms",
        "$description": "Skeleton loading shimmer loop"
      }
    },
    "easing": {
      "default": {
        "$type": "cubicBezier",
        "$value": [0.4, 0, 0.2, 1],
        "$description": "Most transitions (ease-out)"
      },
      "smooth": {
        "$type": "cubicBezier",
        "$value": [0.4, 0, 0.6, 1],
        "$description": "Smooth start/end (modals)"
      },
      "bounce": {
        "$type": "cubicBezier",
        "$value": [0.68, -0.55, 0.265, 1.55],
        "$description": "Success states (use sparingly)"
      }
    }
  },
  "breakpoints": {
    "sm": {
      "$type": "dimension",
      "$value": "640px",
      "$description": "Mobile landscape"
    },
    "md": {
      "$type": "dimension",
      "$value": "768px",
      "$description": "Tablet portrait, 2-column grid"
    },
    "lg": {
      "$type": "dimension",
      "$value": "1024px",
      "$description": "Desktop, 3-column grid, full dashboard"
    },
    "xl": {
      "$type": "dimension",
      "$value": "1280px",
      "$description": "Large desktop, max container widths"
    }
  },
  "container": {
    "maxWidth": {
      "dashboard": {
        "$type": "dimension",
        "$value": "1400px",
        "$description": "Analytics dashboard needs space for charts"
      },
      "grid": {
        "$type": "dimension",
        "$value": "1200px",
        "$description": "Repository grid 3-column optimum"
      },
      "modal": {
        "$type": "dimension",
        "$value": "600px",
        "$description": "Forms, settings modal"
      },
      "modalWide": {
        "$type": "dimension",
        "$value": "800px",
        "$description": "Analysis panel with content"
      },
      "content": {
        "$type": "dimension",
        "$value": "65ch",
        "$description": "Optimal text readability (analysis content)"
      }
    }
  },
  "component": {
    "header": {
      "height": {
        "$type": "dimension",
        "$value": "64px"
      }
    },
    "button": {
      "height": {
        "$type": "dimension",
        "$value": "48px",
        "$description": "Standard button height"
      },
      "heightLarge": {
        "$type": "dimension",
        "$value": "56px",
        "$description": "Primary CTAs, prominent actions"
      },
      "paddingX": {
        "$type": "dimension",
        "$value": "24px"
      }
    },
    "input": {
      "height": {
        "$type": "dimension",
        "$value": "56px"
      },
      "padding": {
        "$type": "dimension",
        "$value": "16px"
      }
    },
    "card": {
      "padding": {
        "$type": "dimension",
        "$value": "32px",
        "$description": "Minimum card padding (desktop)"
      },
      "paddingMobile": {
        "$type": "dimension",
        "$value": "24px",
        "$description": "Reduced for mobile screens"
      },
      "gap": {
        "$type": "dimension",
        "$value": "24px",
        "$description": "Gap between cards in grid"
      }
    }
  },
  "zIndex": {
    "header": {
      "$type": "number",
      "$value": "100"
    },
    "filterBar": {
      "$type": "number",
      "$value": "90"
    },
    "modal": {
      "$type": "number",
      "$value": "1000"
    },
    "modalOverlay": {
      "$type": "number",
      "$value": "999"
    },
    "toast": {
      "$type": "number",
      "$value": "1100"
    }
  }
}
